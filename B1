pipeline {
    agent any
    stages {
        stage ('BUILD') {
            when {
                branch 'master'
            }
            steps {
                echo "this is build stage"   
            }
        }
        stage ('DEPLOY') {
            when {
                branch 'master'
            }
            steps {
                sh'''
                echo "this is deploy stage"
                '''
            }
        }
       
    }  
    
}
