pipeline {
  agent any
 environment {
        EXTENDED = 'BUILD,DEPLOY,TEST'
                   }
for ($EXTENDED)
{
stages {
    stage ('BUILD') {
    when {
         expression {  params.string == 'BUILD' }
              }
      steps {
         echo 'this is build stage'
            }
          }  
    stage ('DEPLOY') {
      when {
               expression {  params.string == 'DEPLOY' }
                }
            steps {
              echo 'this is deploy stage'
                }
              } 
       stage ('TEST') {
        when {
         expression {  params.string == 'TEST' }
        }
            steps {
                  echo 'this is test'
                }
              }
      } 
    }
}
    
    
       
