pipeline {
  agent any
 
 parameters {
    extendedChoice (description: 'Components', multiSelectDelimiter: ' ', name: 'string', quoteValue: false, saveJSONParameterToFile: false, type: 'PT_MULTI_SELECT', value: 'BUILD, DEPLOY, TEST', visibleItemCount: 3)
}
stages {
    stage (BUILD, DEPLOY, TEST') {
    if ( param.string eq BUILD ) {
         echo 'this is build stage'
            } elsif ( param.string eq DEPLOY ) {
            echo 'this is deploy stage'
            } elsif ( param.string eq TEST ) {
             echo 'this is test
          } 
          }
          }
          }
    
       
