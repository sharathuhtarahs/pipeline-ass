pipeline {
    agent any
    parameters {
        choice(choices: ['BUILD ', 'DEPLOY', 'TEST'], description: 'Please click on particular stage to run', name: 'STAGE')
    }
      stages {
        stage('BUILD') {
            steps {
             script {
                if(params.STAGE == 'BUILD')
                {
                 sh'''
                 #!/bin/bash
                 pwd
                 ls
                 echo "this is build stage"
                 git branch: 'main', url: 'https://github.com/sandeep2523/c-project-demo.git'
                 '''
                }
                else
                {
                    echo "skipping this stage"
                }
             }
            }
        }
         stage('DEPLOY') {
            steps{
                script{
                        if(params.STAGE == 'DEPLOY')
                       {
                        sh'''
                        #!/bin/bash
                        pwd
                          ls
                        echo "this is deploy stage"
                        '''
                        }
                        else
                        {
                            echo "skipping this stage"
                        }

                    }
                }
            }
        stage('TEST') {
            steps {
                script {
                    if(params.STAGE == 'TEST')
                    {
                        sh'''
                        #!/bin/bash
                        pwd
                        ls
                        echo "this is test stage"
                        '''
                    }
                    else
                    {
                        echo "skipping this stage"
                    }
                }
            }
        }  

      }
}
