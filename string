pipeline {
  agent any
  parameters {
  extendedChoice description: 'multiple strings', multiSelectDelimiter: ',', name: 'string', quoteValue: true, saveJSONParameterToFile: false, type: 'PT_MULTI_SELECT', value: 'BUILD,DEPLOY,TEST', visibleItemCount: 3
}
   stages {
    stage ('BUILD') {
       when {
         expression { params.value == 'BUILD' }
     }
      steps {
         echo 'this is build stage'
            }
          }  
    stage ('DEPLOY') {
      when {
         expression { params.value == 'DEPLOY' }
      }
            steps {
              echo 'this is deploy stage'
                }
              } 
       stage ('TEST') {
        when {
         expression { params.value == 'TEST' }
        }
            steps {
                  echo 'this is test'
                }
              }
      } 
    }
