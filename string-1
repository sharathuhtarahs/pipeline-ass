pipeline {
  agent any
   stages {
    stage ('BUILD') {
   
    if(params.STAGE == 'build')
       steps {
         echo 'this is build stage'
            }
          }  
    stage ('DEPLOY') {
      when {
        expression { params.running_stage == 'DEPLOY' }
      }
            steps {
              echo 'this is deploy stage'
                }
              } 
       stage ('TEST') {
        when {
         expression { params.running_stage == 'TEST' }
        }
            steps {
                  echo 'this is test'
                }
              }
      } 
    }
