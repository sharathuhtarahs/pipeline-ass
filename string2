pipeline {
  agent any
  parameters {
  extendedChoice(description: 'multiple strings', multiSelectDelimiter: ',', name: 'string', quoteValue: false, saveJSONParameterToFile: false, type: 'PT_MULTI_SELECT', value: 'BUILD, DEPLOY, TEST', visibleItemCount: 3)
}
   stages {
    stage ('BUILD') {
    if(params.string == 'BUILD') || (params.string == 'BUILD, DEPLOY') || (params.string == 'BUILD, TEST')
    {
      steps {
         echo 'this is build stage'
            }
          }
          }
    stage ('DEPLOY') {
      if(params.string == 'DEPLOY') || (params.string == 'DEPLOY, TEST')
      {
            steps {
              echo 'this is deploy stage'
                }
              } 
       }
       stage ('TEST') {
        when {
          anyOf {
         expression { return params.string == 'TEST' }

     }
        }
            steps {
                  echo 'this is test'
                }
              }
      } 
    }
